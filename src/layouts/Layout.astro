---
import "../styles/normalise.css";
import "../styles/accessibility.css";
import "../styles/global.css";

import LeBigJon from "../components/header/le-big-jon/le-big-jon.astro";
import NavBar from "../components/header/navigation-bar/navigation-bar.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
const DESCRIPTION = "Describing the website";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={DESCRIPTION} />
		<meta name="author" content="Jonathan NoÃ©" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="page-wrapper">
			<header class="full-width flex-column-center">
				<LeBigJon />
				<NavBar />
			</header>
			<main class="main-wrapper">
				<slot />
			</main>
			<footer class="made-by-love">Made with love by Noj</footer>
		</div>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	.page-wrapper {
		min-height: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
	}

	.main-wrapper {
		flex: 1;
	}

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>
